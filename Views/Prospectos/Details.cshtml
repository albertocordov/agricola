@model AgricolaProspectos.Models.Prospecto

@{
    ViewData["Title"] = "Details";
}

<h1>Detalles del prospecto</h1>

<div>
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nombre)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nombre)
        </dd>
        <dt class = "col-sm-2">
            Primer apellido
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PrimerApellido)
        </dd>
        <dt class = "col-sm-2">
            Segundo apellido
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.SegundoApellido)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Calle)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Calle)
        </dd>
        <dt class = "col-sm-2">
            Número
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Numero)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Colonia)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Colonia)
        </dd>
        <dt class = "col-sm-2">
            Código postal
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CodigoPostal)
        </dd>
        <dt class = "col-sm-2">
            Teléfono
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Telefono)
        </dd>
        <dt class = "col-sm-2">
            RFC
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Rfc)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Estatus)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Estatus)
        </dd>
        <dt class="col-sm-2">
            Documentos
        </dt>
        <dd class="col-sm-10">
            @if (Model.Documentos != null && Model.Documentos.Any())
            {
                <ul>
                    @foreach (var documento in Model.Documentos)
                    {
                        <li>
                            <a href="@Url.Action("Download", "Prospectos", new { documentoId = documento.DocumentoId })">
                                @documento.NombreDocumento
                            </a>
                        </li>
                    }
                </ul>
            }
            else
            {
                <p>SIN DOCUMENTOS</p>
            }
        </dd>
        @if (Model.Estatus == "Rechazado")
        {
            <h2>Observaciones de Rechazo</h2>
            <p>
                @if (Model.ObservacionesRechazos != null && Model.ObservacionesRechazos.Any())
                {
                    foreach (var observacion in Model.ObservacionesRechazos)
                    {
                    <p>@observacion.Observacion</p>
                    }
                }
                else
                {
                <p>SIN DATOS</p>
                }
            </p>
        }
    </dl>
</div>
<div>
    <a asp-action="Index">Regresar</a>
</div>
